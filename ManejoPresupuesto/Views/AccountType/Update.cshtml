@model AccountType

@{
    ViewData["Title"] = "Editar tipo de cuenta";
}

<h1>Editar Tipo de Cuenta: @Model.Name</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>


<form asp-controller="AccountType" asp-action="Update">
    <input type ="hidden" asp-for="AccountTypeId"/>
    
    <div class="mb-3">
        <label asp-for="Name" class="form-lable"></label>
        <input type="text" asp-for="Name" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index"> Cancelar</a>
    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}